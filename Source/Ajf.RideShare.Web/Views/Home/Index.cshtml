@model Ajf.RideShare.Web.Models.HomeIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2 class="leftMarginDefault">Hovedside - RideShare</h2>

<div class="btn btn-default leftMarginDefault bottomMarginDefault">@Html.ActionLink("Tilføj en samkørsel", "Create", "Events",null,new { @id = "addEvent"})</div>

<div class="container">
    @if (User.Identity.IsAuthenticated)
    {
        foreach (var item in Model.Events)
        {
            <div class="col-md-6 bottomMarginDefault">

                <div>
                    <div class="h3">@item.Date</div>
                    <div>@item.Description</div>

                    <div>

                        @*@Html.ActionLink("Pictures", "Index", "Pictures", new { tripId = item.Id }, null)*@

                    </div>
                </div>
            </div>
        }
    }
</div> 