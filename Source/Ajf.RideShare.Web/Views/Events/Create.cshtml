@model Ajf.RideShare.Web.Models.EventCreateViewModel
@{
    ViewBag.Title = "RideShare - Tilføj en samkørsel";
}

<h2 class="leftMarginSmaller">Tilføj en samkørsel</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.EventId)
    <div class="form-horizontal leftMarginDefault">

        @Html.ValidationSummary()

        <div class="form-group">
            <div>Dato for samkørsel</div>
            <div>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", id="txtDate" } })
                @Html.ValidationMessage("Date")
            </div>
            <div>Beskrivelse</div>
            <div>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "txtDescription" } })
                @Html.ValidationMessage("Description")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" id="btnSubmit"/>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
